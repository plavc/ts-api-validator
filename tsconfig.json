{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*", "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}